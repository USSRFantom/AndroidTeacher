                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:id="@+id/point6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:id="@+id/point7"
